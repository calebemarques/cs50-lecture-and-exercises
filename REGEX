# Import the 're' module for regular expression operations
import re

# Dictionary mapping country codes to their corresponding countries or regions
# This is used to identify the location based on the phone number's country code
locations = {"+1": "United States/Canada",
             "+44": "United Kingdom",
             "+91": "India",
             "+81": "Japan",
             "+55": "Brazil",
             "+61": "Australia",
             "+505": "Nicaragua"
             }
# Main function to validate and identify the country of a phone number
def main():
    # Define the regex pattern for matching phone numbers
    # The pattern expects a country code starting with + followed by 1-3 digits,
    # a space, then the phone number in XXX-XXX-XXXX format
    # \d{1,3} means 1 to 3 digits, \d means digit, \d{3} means exactly 3 digits
    # ?P<country_code> is a named group for the country code
    pattern = r"(?P<country_code>\+\d{1,3}) (?P<phone>\d{3}-\d{3}-\d{4})"

    # Prompt the user to enter a phone number
    number = input("Number:  ")

    # Use re.search to find the pattern in the input string
    match = re.search(pattern, number)

    # If a match is found, extract the country code and print the location
    if match:
        country_code = match.group("country_code")
        print(f"Valid number from {locations.get(country_code, 'Unknown Country')}")
    else:
        # If no match, print invalid
        print("Invalid number")

# Standard Python idiom to run the main function when the script is executed directly
if __name__ == "__main__":
    main()
